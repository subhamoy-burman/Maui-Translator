<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiTranslator.MainPage">

    <StackLayout>
        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
            <Entry x:Name="oldFileEntry" Placeholder="Enter old file path here" />
            <Button Text="Upload" Clicked="Button_Clicked_1" />
        </StackLayout>
        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
            <Entry x:Name="newFileEntry"  Placeholder="Enter new file path here" />
            <Button Text="Upload" Clicked="Button_Clicked_2"/>
        </StackLayout>
        <StackLayout HorizontalOptions="Center">
            <Button Text="Compare"></Button>
        </StackLayout>

    </StackLayout>

    
</ContentPage>
